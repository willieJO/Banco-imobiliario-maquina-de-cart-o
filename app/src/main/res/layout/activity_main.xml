<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Iniciar jogo"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonJogador1"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Numero do cartão: 1" />

        <Button
            android:id="@+id/buttonJogador2"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="Numero do cartão: 2" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonJogador3"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="Numero do cartão: 3" />

        <Button
            android:id="@+id/buttonJogador4"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Numero do cartão: 4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonJogador5"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="Numero do cartão: 5" />

        <Button
            android:id="@+id/buttonJogador6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:visibility="invisible"
            android:text="Numero do cartão: 6" />

    </LinearLayout>

    <Button
        android:id="@+id/completaRodada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Completar rodada"
        android:visibility="invisible"
        android:textAlignment="center" />
    <Button
        android:id="@+id/restartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Reinciiar jogo"
        android:visibility="invisible"
        android:textAlignment="center" />



</LinearLayout>